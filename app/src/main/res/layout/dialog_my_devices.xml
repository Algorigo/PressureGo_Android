<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_device_info_dialog"
    android:paddingHorizontal="16dp"
    android:paddingTop="28dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/my_devices_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:lineSpacingExtra="5sp"
        android:text="Connected devices"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/my_devices_connected_device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_devices_connected_device"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/my_devices_add_device_button"
        app:layout_constraintTop_toBottomOf="@+id/my_devices_title"
        tools:listitem="@layout/item_bluetooth_scan_connected_device" />

    <TextView
        android:id="@+id/bluetooth_scan_no_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/group_1721"
        android:drawablePadding="4dp"
        android:text="There is no device connected"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/my_devices_connected_device"
        app:layout_constraintEnd_toEndOf="@+id/my_devices_connected_device"
        app:layout_constraintStart_toStartOf="@+id/my_devices_connected_device"
        app:layout_constraintTop_toTopOf="@+id/my_devices_connected_device"
        tools:visibility="visible" />

    <Button
        android:id="@+id/my_devices_add_device_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_round_bg_main"
        android:text="Add devices"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_devices_connected_device"
        app:layout_goneMarginTop="0px" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarActionBarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorControlNormal">@color/blue_grey</item>
        <item name="colorControlActivated">@color/white</item> <!--touch tool tip color-->
        <item name="colorControlHighlight">@color/white</item> <!--Focused underline color -->

        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

    </style>

    <style name="NotoSansKrRegularStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NotoSansKrMediumStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MainEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/blue_grey</item>
        <item name="colorControlActivated">@color/white</item> <!--touch tool tip color-->
        <item name="colorControlHighlight">@color/white</item> <!--Focused underline color -->

        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/blue_grey</item>
        <item name="android:textColorHighlight">#80ffffff</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <!--        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>-->

<!--EditText의 Hint-->
        <item name="android:textColorHint">@color/blue_grey</item>
        <!--상단의 Hint-->
        <item name="hintTextColor">@color/blue_grey</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <!--Error-->
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/orangey_red</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/blue_grey</item>
        <!--        <item name="colorError">@color/orangey_red</item>-->
        <!--        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>-->
        <!--        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>-->
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
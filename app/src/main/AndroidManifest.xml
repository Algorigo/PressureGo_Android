<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.algorigo.pressuregoapp">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".PressureGoApplication"
        android:theme="@style/Theme.PressureGoApp">
        <activity android:name="ui.BluetoothScanActivity" />
        <activity android:name="ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ui.OnBoardingActivity" />
        <activity android:name="ui.NewMainActivity" />

        <activity android:name=".RxPDMSDeviceActivity" />
        <activity android:name=".BasicPDMSDeviceActivity" />
        <activity android:name=".RxActivity" />
        <activity android:name=".BasicActivity" />
        <activity android:name=".MainActivity" >

        </activity>

        <service
            android:name=".DfuService"
            android:exported="true" />

        <service android:name="service.CSVRecordService"
            android:exported="true"
            />

        <activity android:name=".NotificationActivity" />
    </application>

</manifest>